{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist-test",
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": false,
    "isolatedModules": false,
    "paths": {
      "@/*": ["./src/*"],
      "@testing-library/react": ["./tests/testing-library-react"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist-test"]
}
