# Public keys required by the Supabase client helpers
NEXT_PUBLIC_SUPABASE_URL="https://YOUR-PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="public-anon-key"

# Optional: expose the deployed site URL so auth redirects resolve correctly
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Server-side keys (only required for migrations or background jobs)
SUPABASE_SERVICE_ROLE_KEY="service-role-key"
SUPABASE_DB_URL="postgresql://postgres:postgres@127.0.0.1:6543/postgres"

# Testing helpers
# AUTH_TEST_MODE=1 allows local Jest/Playwright tests to bypass Supabase network calls.
AUTH_TEST_MODE=0
